<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/nav_draw_width"
    android:layout_height="48dp"
    android:id="@+id/nav_draw_item_layout"
    android:background="@drawable/nav_drawer_selector_bg"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/nav_drawer_selector_fg">

    <ImageView
        android:id="@+id/nav_draw_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="@dimen/nav_draw_icon_spacing"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_action_important" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/nav_draw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nav_draw_text_spacing"
        android:alpha="87"
        android:text="@string/hello_blank_fragment"
        android:textColor="@drawable/nav_drawer_selector_fg"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:textWeight="medium" />

</RelativeLayout>
