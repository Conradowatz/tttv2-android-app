<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/nav_draw_width"
    android:layout_height="56dp"
    android:background="@drawable/nav_drawer_selector_bg">

    <View
        android:id="@+id/nav_draw_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/nav_draw_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nav_draw_icon_spacing"
        android:alpha="87"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/nav_draw_subheader"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:textWeight="medium" />

</RelativeLayout>
